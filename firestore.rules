rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------
    // Helpers
    // ----------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userOrg() {
      return isSignedIn() ? userDoc().data.org : null;
    }

    function userRole() {
      return isSignedIn() ? userDoc().data.role : null;
    }

    function isOrg(orgId) {
      return userOrg() == orgId;
    }

    function isSuperAdmin() {
      return isSignedIn() && userRole() == "SuperAdmin";
    }

    function isAdmin() {
      return isSignedIn() && (userRole() == "Admin" || userRole() == "SuperAdmin");
    }

    function isEditor() {
      return isSignedIn() && (userRole() == "Editor" || userRole() == "Admin" || userRole() == "SuperAdmin");
    }

    function isViewer() {
      return isSignedIn() && (userRole() == "Viewer" || isEditor());
    }

    function docBelongsToOrg() {
      return resource.data.org == userOrg();
    }

    function writeSetsOrgCorrectly() {
      return request.resource.data.org == userOrg();
    }

    // ----------------------------
    // USERS
    // ----------------------------
    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow list: if isSuperAdmin();
      allow create: if isSignedIn() && request.auth.uid == uid
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.role in ["Viewer","Editor","Admin","SuperAdmin"]
                    && request.resource.data.org is string;
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // ----------------------------
    // SITES
    // ----------------------------
    match /sites/{siteSlug} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create, update, delete: if isAdmin() && writeSetsOrgCorrectly();
    }

    // ----------------------------
    // IMPORT LOGS
    // ----------------------------
    match /moovs_imports/{importId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create: if isEditor() && writeSetsOrgCorrectly();
      allow update, delete: if isAdmin() && docBelongsToOrg();
    }

    match /ads_imports/{importId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create: if isEditor() && writeSetsOrgCorrectly();
      allow update, delete: if isAdmin() && docBelongsToOrg();
    }

    // ----------------------------
    // METRICS
    // ----------------------------
    match /metrics_rollups/{rollupId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create, update, delete: if isAdmin() && writeSetsOrgCorrectly();
    }

    // ----------------------------
    // SEO BOT
    // ----------------------------
    match /seo_topics/{topicId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create: if isEditor() && writeSetsOrgCorrectly();
      allow update: if isEditor() && docBelongsToOrg();
      allow delete: if isAdmin() && docBelongsToOrg();
    }

    match /seo_runs/{runId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create, update, delete: if isAdmin() && writeSetsOrgCorrectly();
    }

    match /seo_drafts/{draftId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create: if isEditor() && writeSetsOrgCorrectly();
      allow update: if isEditor() && docBelongsToOrg();
      allow delete: if isAdmin() && docBelongsToOrg();
    }

    match /seo_publish_manifests/{manifestId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create, update, delete: if isAdmin() && writeSetsOrgCorrectly();
    }

    // ----------------------------
    // IMAGES
    // ----------------------------
    match /images/{imageId} {
      allow read: if isViewer() && docBelongsToOrg();
      allow create: if isEditor() && writeSetsOrgCorrectly();
      allow update, delete: if isAdmin() && docBelongsToOrg();
    }

    // ----------------------------
    // DEFAULT DENY
    // ----------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
