---
interface Props {
  target: string;
  phone?: string;
  phoneDisplay?: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'primary' | 'secondary';
  location?: string;
}

const {
  target,
  phone = '+12248013090',
  phoneDisplay = '(224) 801-3090',
  class: className = '',
  size = 'md',
  variant = 'secondary',
  location = 'unknown'
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const variantClasses = {
  primary: 'bg-blue-600 hover:bg-blue-700 text-white',
  secondary: 'bg-green-600 hover:bg-green-700 text-white'
};
---

<a
  href={`tel:${phone}`}
  class:list={[
    'inline-block font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl',
    sizeClasses[size],
    variantClasses[variant],
    className
  ]}
  data-track-event="call_now_click"
  data-track-target={target}
  data-track-location={location}
>
  <svg class="inline-block w-5 h-5 mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
  </svg>
  Call {phoneDisplay}
</a>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('[data-track-event="call_now_click"]');

    buttons.forEach(button => {
      button.addEventListener('click', (e) => {
        const target = button.getAttribute('data-track-target');
        const location = button.getAttribute('data-track-location');

        if (typeof window !== 'undefined' && (window as any).dataLayer) {
          (window as any).dataLayer.push({
            event: 'call_now_click',
            eventCategory: 'Engagement',
            eventAction: 'Click',
            eventLabel: `${target} - ${location}`,
            button_location: location,
            site_target: target
          });
        }
      });
    });
  });
</script>
