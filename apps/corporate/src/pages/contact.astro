---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Contact Us | Chicago Executive Car Service";
const description = "Contact Chicago Executive Car Service for quotes, bookings, or questions. Available 24/7/365. Call (312) 998-0909 or request a quote online.";
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Contact Us
        </h1>
        <p class="text-xl md:text-2xl text-gray-300">
          Available 24/7/365 for all your executive transportation needs
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-slate-900 mb-8">Get In Touch</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex gap-4 items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-white text-xl">
                üìû
              </div>
              <div>
                <h3 class="font-bold text-slate-900 mb-1">Phone</h3>
                <a href="tel:+13129980909" class="text-xl text-amber-600 hover:text-amber-700 font-semibold">
                  (312) 998-0909
                </a>
                <p class="text-gray-600 text-sm mt-1">Available 24/7 for bookings and support</p>
              </div>
            </div>

            <div class="flex gap-4 items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-white text-xl">
                ‚úâÔ∏è
              </div>
              <div>
                <h3 class="font-bold text-slate-900 mb-1">Email</h3>
                <a href="mailto:corporate@chicagoexecutivecarservice.com" class="text-amber-600 hover:text-amber-700">
                  corporate@chicagoexecutivecarservice.com
                </a>
                <p class="text-gray-600 text-sm mt-1">Response within 2 hours during business hours</p>
              </div>
            </div>

            <div class="flex gap-4 items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-white text-xl">
                üìç
              </div>
              <div>
                <h3 class="font-bold text-slate-900 mb-1">Service Area</h3>
                <p class="text-gray-700">Chicago & Surrounding Areas</p>
                <p class="text-gray-600 text-sm mt-1">Downtown, North Shore, Suburbs, O'Hare, Midway</p>
              </div>
            </div>

            <div class="flex gap-4 items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-white text-xl">
                ‚è∞
              </div>
              <div>
                <h3 class="font-bold text-slate-900 mb-1">Availability</h3>
                <p class="text-gray-700">24 Hours / 7 Days / 365 Days</p>
                <p class="text-gray-600 text-sm mt-1">Always ready when you need us</p>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-xl p-6">
            <h3 class="font-bold text-slate-900 mb-3">Corporate Accounts</h3>
            <p class="text-gray-700 mb-4">
              Interested in setting up a corporate account? Contact our business development team for customized solutions and volume pricing.
            </p>
            <a href="/services/corporate-accounts" class="text-amber-600 hover:text-amber-700 font-semibold">
              Learn More About Corporate Accounts ‚Üí
            </a>
          </div>
        </div>

        <!-- Quote Request Form -->
        <div>
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-xl p-8">
            <h2 class="text-3xl font-bold text-slate-900 mb-6">Request a Quote</h2>
            
            <form class="space-y-4">
              <div>
                <label for="name" class="block text-sm font-semibold text-slate-900 mb-2">Full Name *</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  placeholder="John Smith"
                />
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="email" class="block text-sm font-semibold text-slate-900 mb-2">Email *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                    placeholder="john@company.com"
                  />
                </div>

                <div>
                  <label for="phone" class="block text-sm font-semibold text-slate-900 mb-2">Phone *</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                    required
                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                    placeholder="(312) 555-0100"
                  />
                </div>
              </div>

              <div>
                <label for="company" class="block text-sm font-semibold text-slate-900 mb-2">Company</label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  placeholder="Your Company Name"
                />
              </div>

              <div>
                <label for="service" class="block text-sm font-semibold text-slate-900 mb-2">Service Type *</label>
                <select 
                  id="service" 
                  name="service"
                  required
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                >
                  <option value="">Select a service</option>
                  <option value="airport">Airport Transfer</option>
                  <option value="hourly">Hourly Chauffeur</option>
                  <option value="corporate">Corporate Account</option>
                  <option value="roadshow">Roadshow</option>
                  <option value="event">Special Event</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="date" class="block text-sm font-semibold text-slate-900 mb-2">Service Date</label>
                  <input 
                    type="date" 
                    id="date" 
                    name="date"
                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  />
                </div>

                <div>
                  <label for="time" class="block text-sm font-semibold text-slate-900 mb-2">Service Time</label>
                  <input 
                    type="time" 
                    id="time" 
                    name="time"
                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  />
                </div>
              </div>

              <div>
                <label for="pickup" class="block text-sm font-semibold text-slate-900 mb-2">Pickup Location</label>
                <input 
                  type="text" 
                  id="pickup" 
                  name="pickup"
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  placeholder="Address or Airport"
                />
              </div>

              <div>
                <label for="dropoff" class="block text-sm font-semibold text-slate-900 mb-2">Drop-off Location</label>
                <input 
                  type="text" 
                  id="dropoff" 
                  name="dropoff"
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  placeholder="Address or Airport"
                />
              </div>

              <div>
                <label for="passengers" class="block text-sm font-semibold text-slate-900 mb-2">Number of Passengers</label>
                <select 
                  id="passengers" 
                  name="passengers"
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                >
                  <option value="1">1 passenger</option>
                  <option value="2">2 passengers</option>
                  <option value="3">3 passengers</option>
                  <option value="4-6">4-6 passengers</option>
                  <option value="7-10">7-10 passengers</option>
                  <option value="10+">10+ passengers</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold text-slate-900 mb-2">Additional Details</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="4"
                  class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none"
                  placeholder="Flight information, special requests, or any other details..."
                ></textarea>
              </div>

              <button 
                type="submit"
                class="w-full bg-amber-500 hover:bg-amber-600 text-slate-900 px-8 py-4 rounded-lg font-bold text-lg transition shadow-lg"
              >
                Request Quote
              </button>

              <p class="text-sm text-gray-600 text-center">
                Or call us directly at <a href="tel:+13129980909" class="text-amber-600 font-semibold">(312) 998-0909</a>
              </p>
            </form>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="bg-gradient-to-r from-slate-900 to-slate-800 text-white rounded-xl p-8">
        <h2 class="text-2xl font-bold mb-6 text-center">Helpful Resources</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <a href="/services/airport-transfers" class="text-center p-4 bg-slate-800/50 rounded-lg hover:bg-slate-700 transition">
            <div class="text-3xl mb-2">‚úàÔ∏è</div>
            <div class="font-semibold">Airport Transfers</div>
          </a>
          <a href="/services/hourly-chauffeur" class="text-center p-4 bg-slate-800/50 rounded-lg hover:bg-slate-700 transition">
            <div class="text-3xl mb-2">‚è∞</div>
            <div class="font-semibold">Hourly Service</div>
          </a>
          <a href="/services/corporate-accounts" class="text-center p-4 bg-slate-800/50 rounded-lg hover:bg-slate-700 transition">
            <div class="text-3xl mb-2">üè¢</div>
            <div class="font-semibold">Corporate Accounts</div>
          </a>
          <a href="/pricing" class="text-center p-4 bg-slate-800/50 rounded-lg hover:bg-slate-700 transition">
            <div class="text-3xl mb-2">üí∞</div>
            <div class="font-semibold">View Pricing</div>
          </a>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mt-16">
        <h2 class="text-3xl font-bold text-slate-900 mb-8 text-center">Common Questions</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6">
            <h3 class="font-bold text-lg text-slate-900 mb-2">How far in advance should I book?</h3>
            <p class="text-gray-700">
              We recommend 24-48 hours for guaranteed availability, but we can often accommodate same-day requests based on fleet availability.
            </p>
          </div>

          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6">
            <h3 class="font-bold text-lg text-slate-900 mb-2">Do you offer 24/7 service?</h3>
            <p class="text-gray-700">
              Yes! We operate 24 hours a day, 7 days a week, 365 days a year. Early morning flights and late-night pickups are no problem.
            </p>
          </div>

          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6">
            <h3 class="font-bold text-lg text-slate-900 mb-2">What payment methods do you accept?</h3>
            <p class="text-gray-700">
              We accept all major credit cards, corporate cards, and offer Net 30 invoicing for corporate accounts.
            </p>
          </div>

          <div class="bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-lg p-6">
            <h3 class="font-bold text-lg text-slate-900 mb-2">Can I book for someone else?</h3>
            <p class="text-gray-700">
              Absolutely. Many assistants book transportation for executives. Just provide the passenger's name and contact information.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Placeholder) -->
  <section class="py-20 bg-gradient-to-b from-slate-50 to-white">
    <div class="container mx-auto px-4 max-w-5xl text-center">
      <h2 class="text-3xl font-bold text-slate-900 mb-4">Serving All of Chicagoland</h2>
      <p class="text-xl text-gray-700 mb-8">
        From downtown Chicago to the suburbs, O'Hare to Midway, and everywhere in between
      </p>
      <div class="bg-slate-200 rounded-xl h-96 flex items-center justify-center text-gray-500">
        <div class="text-center">
          <div class="text-6xl mb-4">üó∫Ô∏è</div>
          <div class="text-xl font-semibold">Chicago Metropolitan Area</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
