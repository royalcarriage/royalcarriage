---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTAButton from '@packages/astro-components/CTAButton.astro';
import CallButton from '@packages/astro-components/CallButton.astro';
import RequestQuoteButton from '@packages/astro-components/RequestQuoteButton.astro';
import ContactForm from '@packages/astro-components/ContactForm.astro';
import { generateServiceSchema } from '@packages/astro-utils/schema';
import { getSiteConfig } from '@packages/astro-utils/config';
import { getSiteImages } from '@packages/astro-utils/images';
import { db } from '../../lib/firebase';
import { collection, getDocs, query, where, doc, getDoc } from 'firebase/firestore';

const config = getSiteConfig('airport');
const images = getSiteImages('airport');

export async function getStaticPaths() {
  try {
    if (!db) return [];

    // Get locations with city content
    const locSnap = await getDocs(collection(db, 'locations'));
    const cityContentSnap = await getDocs(collection(db, 'city_content'));
    const eventsSnap = await getDocs(collection(db, 'events'));

    const cityContentMap: Record<string, any> = {};
    cityContentSnap.docs.forEach(doc => {
      cityContentMap[doc.id] = { id: doc.id, ...doc.data() };
    });

    const eventsMap: Record<string, any[]> = {};
    eventsSnap.docs.forEach(doc => {
      const event = doc.data();
      const locSlug = event.locationSlug;
      if (!eventsMap[locSlug]) eventsMap[locSlug] = [];
      eventsMap[locSlug].push({ id: doc.id, ...event });
    });

    return locSnap.docs.map(doc => {
      const data = doc.data();
      const slug = data.slug || doc.id;
      return {
        params: { slug },
        props: {
          location: { id: doc.id, ...data },
          cityContent: cityContentMap[slug] || null,
          events: eventsMap[slug] || []
        }
      };
    });
  } catch (error) {
    console.warn('[City Page] Error:', error);
    return [];
  }
}

interface Props {
  location: {
    id: string;
    name: string;
    slug: string;
    type: string;
    area?: string;
  };
  cityContent: {
    tagline?: string;
    description?: string;
    whyLimoService?: string[];
    popularRoutes?: Array<{ from: string; to: string; time: string; distance: string }>;
    landmarks?: string[];
    nearbyVenues?: string[];
  } | null;
  events: Array<{
    id: string;
    name: string;
    slug: string;
    description: string;
    startDate: string;
    endDate: string;
    category: string;
    venues: string[];
    transportationTips: string;
    recommendedVehicles: string[];
    imageUrl?: string;
  }>;
}

const { location, cityContent, events } = Astro.props;

const serviceSchema = generateServiceSchema({
  config,
  serviceName: `Airport Limousine Service - ${location.name}, IL`,
  serviceDescription: `Professional airport limousine service in ${location.name}. Reliable O'Hare and Midway airport transfers with experienced chauffeurs. Available 24/7.`,
  serviceType: 'Airport Transportation',
  url: Astro.url.pathname
});

// Sort events by date
const sortedEvents = events.sort((a, b) => new Date(a.startDate).getTime() - new Date(b.startDate).getTime());
const upcomingEvents = sortedEvents.filter(e => new Date(e.startDate) >= new Date());
---

<BaseLayout
  title={`${location.name} Airport Limousine Service - O'Hare & Midway Transfers`}
  description={`Professional airport limousine service in ${location.name}, IL. Reliable O'Hare and Midway airport transfers. ${cityContent?.tagline || ''}`}
  canonical={`/city/${location.slug}`}
  schema={serviceSchema}
>
  <!-- Hero Section -->
  <section class="relative text-white py-20 md:py-28">
    <div class="absolute inset-0 z-0">
      <img
        src={images.hero.main}
        alt={`Airport limousine service in ${location.name}`}
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-800/80"></div>
    </div>
    <div class="relative z-10 container mx-auto px-4">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
          {location.name} Airport Limousine Service
        </h1>
        {cityContent?.tagline && (
          <p class="text-xl md:text-2xl text-blue-100 mb-6">{cityContent.tagline}</p>
        )}
        <p class="text-lg text-gray-200 mb-8 max-w-2xl">
          Professional airport transportation from {location.name} to O'Hare and Midway airports.
          Available 24/7 with real-time flight monitoring.
        </p>
        <div class="flex flex-wrap gap-4">
          <CTAButton target="airport" location={`city-${location.slug}`} size="lg" />
          <CallButton target="airport" location={`city-${location.slug}`} size="lg" />
          <RequestQuoteButton target="airport" location={`city-${location.slug}`} size="lg" />
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Routes from this City -->
  {cityContent?.popularRoutes && cityContent.popularRoutes.length > 0 && (
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Popular Routes from {location.name}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
          {cityContent.popularRoutes.map(route => (
            <div class="bg-blue-50 rounded-lg p-4 text-center">
              <div class="text-sm text-gray-500 mb-1">{route.from} to</div>
              <div class="font-bold text-lg text-gray-900 mb-2">{route.to}</div>
              <div class="flex justify-center gap-4 text-sm">
                <span class="text-blue-600">{route.time}</span>
                <span class="text-gray-500">{route.distance}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Why Residents Love Limo Service -->
  {cityContent?.whyLimoService && cityContent.whyLimoService.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-4">
            Why {location.name} Residents Choose Royal Carriage
          </h2>
          <p class="text-center text-gray-600 mb-10">
            Discover why thousands of {location.name} travelers trust us for their airport transportation.
          </p>
          <div class="space-y-4">
            {cityContent.whyLimoService.map((reason, index) => (
              <div class="flex items-start gap-4 bg-white rounded-lg p-5 shadow-sm">
                <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                  <span class="text-blue-600 font-bold">{index + 1}</span>
                </div>
                <p class="text-gray-700">{reason}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Upcoming Events -->
  {upcomingEvents.length > 0 && (
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-4">
          Upcoming Events in {location.name}
        </h2>
        <p class="text-center text-gray-600 mb-10">
          Need transportation to these events? Book your ride in advance!
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {upcomingEvents.slice(0, 6).map(event => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
              {event.imageUrl && (
                <img
                  src={event.imageUrl}
                  alt={event.name}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              )}
              <div class="p-5">
                <div class="text-sm text-blue-600 font-medium mb-2">
                  {new Date(event.startDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  {event.endDate !== event.startDate && ` - ${new Date(event.endDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}`}
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{event.name}</h3>
                <p class="text-gray-600 text-sm mb-4">{event.description}</p>
                <div class="bg-blue-50 rounded-lg p-3 mb-4">
                  <p class="text-sm text-blue-800">
                    <strong>Transportation Tip:</strong> {event.transportationTips}
                  </p>
                </div>
                <CTAButton target="airport" location={`event-${event.slug}`} size="sm" />
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Local Landmarks & Venues -->
  {cityContent?.landmarks && cityContent.landmarks.length > 0 && (
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold text-center mb-6">
            Popular {location.name} Destinations We Serve
          </h2>
          <div class="flex flex-wrap justify-center gap-3">
            {cityContent.landmarks.map(landmark => (
              <span class="bg-white border border-gray-200 rounded-full px-4 py-2 text-gray-700">
                {landmark}
              </span>
            ))}
            {cityContent.nearbyVenues?.map(venue => (
              <span class="bg-blue-50 border border-blue-200 rounded-full px-4 py-2 text-blue-700">
                {venue}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Service Features -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Our {location.name} Airport Services</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">24/7 Availability</h3>
            <p class="text-gray-600">Early morning flights or late-night arrivals? We're here when you need us.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Flight Tracking</h3>
            <p class="text-gray-600">We monitor your flight in real-time and adjust pickup accordingly.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Flat Rate Pricing</h3>
            <p class="text-gray-600">Know your cost upfront. No surge pricing, no hidden fees.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-4">
          Request a Quote for {location.name} Service
        </h2>
        <p class="text-center text-gray-600 mb-8">
          Fill out the form below and we'll get back to you within the hour.
        </p>
        <ContactForm target="airport" accentColor="blue" />
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="relative text-white py-16">
    <div class="absolute inset-0 z-0">
      <img src={images.hero.secondary} alt="Luxury airport limousine" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-r from-blue-900/95 to-slate-900/90"></div>
    </div>
    <div class="relative z-10 container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Book Your {location.name} Airport Transfer?
      </h2>
      <p class="text-xl text-gray-200 mb-8">
        Professional, reliable service from {location.name} to O'Hare and Midway airports.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <CTAButton target="airport" location={`city-${location.slug}-bottom`} size="lg" variant="secondary" />
        <CallButton target="airport" location={`city-${location.slug}-bottom`} size="lg" />
      </div>
    </div>
  </section>
</BaseLayout>
