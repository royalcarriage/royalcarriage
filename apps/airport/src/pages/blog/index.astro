---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTAButton from '@packages/astro-components/CTAButton.astro';
import { getSiteConfig } from '@packages/astro-utils/config';
import { getSiteImages } from '@packages/astro-utils/images';
import { db } from '../../lib/firebase';
import { collection, getDocs, query, where, orderBy } from 'firebase/firestore';

const config = getSiteConfig('airport');
const images = getSiteImages('airport');

interface BlogPost {
  id: string;
  title: string;
  slug: string;
  excerpt: string;
  content: string;
  author: string;
  publishDate: string;
  category: string;
  tags: string[];
  imageUrl?: string;
}

let posts: BlogPost[] = [];

try {
  if (db) {
    const postsQuery = query(
      collection(db, 'blog_posts'),
      where('status', '==', 'published'),
      where('websiteIds', 'array-contains', 'chicagoairportblackcar')
    );
    const snapshot = await getDocs(postsQuery);
    posts = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() } as BlogPost));
    posts.sort((a, b) => new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime());
  }
} catch (error) {
  console.warn('[Blog] Error fetching posts:', error);
}
---

<BaseLayout
  title="Chicago Airport Transportation Blog | Travel Tips & News"
  description="Expert tips for Chicago airport travel, limo service guides, and local event transportation. Stay informed with Royal Carriage Limousine."
  canonical="/blog"
>
  <!-- Hero -->
  <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Travel Tips & News</h1>
      <p class="text-xl text-blue-100">
        Expert insights on Chicago airport transportation, events, and local travel.
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {posts.map(post => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition">
              {post.imageUrl && (
                <a href={`/blog/${post.slug}`}>
                  <img
                    src={post.imageUrl}
                    alt={post.title}
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                  <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded">{post.category}</span>
                  <span>{new Date(post.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                </div>
                <h2 class="text-xl font-bold text-gray-900 mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition">{post.title}</a>
                </h2>
                <p class="text-gray-600 mb-4">{post.excerpt}</p>
                <a
                  href={`/blog/${post.slug}`}
                  class="text-blue-600 font-medium hover:underline inline-flex items-center gap-1"
                >
                  Read More
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-gray-500 text-lg mb-6">No blog posts available yet. Check back soon!</p>
          <CTAButton target="airport" location="blog-empty" size="lg" />
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-16 bg-blue-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Need Airport Transportation?</h2>
      <p class="text-xl text-blue-200 mb-8">Book your ride now or call us for immediate assistance.</p>
      <div class="flex flex-wrap gap-4 justify-center">
        <CTAButton target="airport" location="blog-cta" size="lg" variant="secondary" />
        <a
          href="tel:+12248013090"
          class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-8 rounded-lg transition"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (224) 801-3090
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
