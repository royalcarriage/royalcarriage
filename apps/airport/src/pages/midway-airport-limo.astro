        <a href={BOOKING_URL} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white rounded-md font-semibold hover:bg-white/10 transition">
          Book Online
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
