rules_version = '2';

// Firebase Storage security rules for AI-generated images and assets
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin (via custom claims)
    function isAdmin() {
      return isAuthenticated() &&
             (request.auth.token.role == 'admin' || request.auth.token.admin == true);
    }
    
    // Helper function to validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // AI-generated images - admin only
    match /ai-images/{imageId} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isImage() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // Page screenshots - admin only
    match /screenshots/{screenshotId} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isImage() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // User uploads - admin only
    match /uploads/{uploadId} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // Temporary files - scoped per user
    match /temp/{userId}/{tempFile=**} {
      allow read, write, delete: if isAuthenticated() && userId == request.auth.uid && isValidSize();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
