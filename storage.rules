rules_version = '2';

// Firebase Storage security rules for AI-generated images and assets
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.role == 'admin';
    }
    
    // Helper function to validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // AI-generated images - admin only write, public read
    match /ai-images/{imageId} {
      allow read: if true; // Public read for website display
      allow write: if isAdmin() && isImage() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // Page screenshots - admin only
    match /screenshots/{screenshotId} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isImage() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // User uploads - admin only
    match /uploads/{uploadId} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isValidSize();
      allow delete: if isAdmin();
    }
    
    // Temporary files - auto-cleanup
    match /temp/{tempFile} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidSize();
      allow delete: if isAuthenticated();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
