# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=royalcarriagelimoseo.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=royalcarriagelimoseo
VITE_FIREBASE_STORAGE_BUCKET=royalcarriagelimoseo.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=910418192896
VITE_FIREBASE_APP_ID=1:910418192896:web:43a0aa8f8bf2a2cb2ac6e5

# Admin Dashboard
ADMIN_PORTAL_URL=https://admin.royalcarriagelimo.com

# Google Cloud AI Configuration
GOOGLE_CLOUD_PROJECT=royalcarriagelimoseo
GOOGLE_CLOUD_LOCATION=us-central1
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Image Generation Configuration
GOOGLE_CLOUD_STORAGE_BUCKET=your-project-id-ai-images
VERTEX_AI_LOCATION=us-central1
IMAGEN_MODEL=imagen-3.0-generate-001

# Image Generation Limits
MAX_IMAGES_PER_DAY=50
MAX_IMAGE_SIZE_MB=10

# AI API Keys
# Required for SEO Content Generation (seo-draft.mjs)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# GitHub Configuration (Optional - Required for SEO PR Creation)
# Create a personal access token at https://github.com/settings/tokens
# Or use GitHub CLI: gh auth login
GITHUB_TOKEN=your-github-token-here

# OIDC (GitHub Actions)
WORKLOAD_IDENTITY_PROVIDER=projects/PROJECT_NUMBER/locations/global/workloadIdentityPools/POOL/providers/PROVIDER
WORKLOAD_IDENTITY_SERVICE_ACCOUNT=service-account@project.iam.gserviceaccount.com

# Analytics Configuration (Optional)
# GOOGLE_ANALYTICS_PROPERTY_ID=your-ga-property-id

# Security Configuration
# Generate a secure session secret with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-session-secret-at-least-32-characters-long

# API Rate Limiting
API_RATE_LIMIT=100  # requests per 15 minutes

# Admin Access (Optional - for initial setup)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=secure-password

# Add other environment variables as needed
