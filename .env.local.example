# Local environment variables template
# Copy to .env.local and fill values (DO NOT commit .env.local)

# Node / server
NODE_ENV=development
PORT=5000

# Firebase / Google Cloud
GOOGLE_CLOUD_PROJECT=royalcarriagelimoseo
GOOGLE_CLOUD_LOCATION=us-central1
# Path to service account JSON (absolute path recommended)
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account-key.json

# Firebase client (NEXT_PUBLIC_*) for local dev if needed
NEXT_PUBLIC_FIREBASE_PROJECT_ID=royalcarriagelimoseo
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=royalcarriagelimoseo.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=royalcarriagelimoseo.appspot.com
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# Local overrides
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=secure-password
